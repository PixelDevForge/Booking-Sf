{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}


<div class="container-fluid">
    <h1 class="mt-3">Gestion des annonces </h1>
    <table class="table table-hover">
        <thead>
            <th>id</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>RÃ©servation</th>
            <th class"text-center">Notes</th>
            <th>Action</th>
        </thead>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td>{{ad.id}}</td>
                <td>{{ad.title}}</td>
                <td>
                    <img src="{{ad.author.avatar}}" alt="Avatar de {{ad.author.fullname}}" class="avatar avatar-small">
                    {{ad.author.fullname}}
                </td>
                <td class"text-center"><span class="badge badge-info rounded">{{ad.bookings|length}}</span></td>
                <td class"text-center"><span class="badge badge-success rounded">{{ad.averageratings|number_format(1,',',' ')}}</span></td>
                <td>
                    <a href="{{ path('app_admin_ads_edit',{'id':ad.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('app_admin_ads_delete',{'id':ad.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

