{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-3 text-center">
            <img src="{{user.avatar}}" alt="{{user.fullName}}" class="avatar mb-3">
            <br>
            <span class="mt-2 badge bg-warning ">{{user.ads|length}}{%if user.ads|length > 1 %} annonces {%else%} annonce {%endif%}</span>             
        </div>
        <div class="col-9">
            <h1>{{user.fullName}}</h1>
            {% if  user is same as (app.user) %}
                <div class="mt-3">
                    <a class="btn btn-primary" href="{{path('app_account_profile')}}">modifier mon profile</a>
                    <a class="btn btn-danger" href="{{path('app_account_password')}}">modifier mon password</a>
                </div>
            {% endif %}
        </div>
        <div class="container mt-5">
            {{user.description |raw}}
            <hr class="py-3">
            <h2>Vos annonces</h2>
        </div>
        {% if  user.ads|length > 0%}
        <div class="row">
            
            {% for ad in user.ads %}
                    
            {% include "ad/_ad.html.twig" %}
                    
            {% endfor %}
        
        </div>
        
        {%else%}
        
        <div class="alert alert-warning">Vous n'avez post√© aucune annonce !</div>
        
        {% endif %}
        
</div>
{% endblock %}
